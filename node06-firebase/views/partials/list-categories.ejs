  <div class="row">
      <% for( var i=0; i < categories.length ; i++){%>
        
        <% if( i !== 0 && (i % 3) === 0){ %>
         <div class="clearfix hidden-xs"></div>
        <% } %>

        <div class="col-sm-4">
        <div class="thumbnail">
            <img src="/images/<%= categories[i].thumbnail; %>" alt="<%=categories[i].title%>">
            <div class="caption">
                <h3><%=categories[i].title; %></h3>
                <p><%- categories[i].description; %></p>
                <p><a href="/category/<%=categories[i].id%>/items" class="btn btn-primary" role="button">View Items</a></p>
            </div>
            
         </div>
        </div>
      <% } %>
    </div>